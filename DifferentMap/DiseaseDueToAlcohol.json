{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url":"https://raw.githubusercontent.com/stha0035/Assingment2-2977275/main/DiseaseDueToAlcohol.csv"
    },
    "params": [
      {
        "name": "expand",
        "select": {"type": "point", "on": "mouseover"}
      },
      {"name": "hover", "select": "point"}
    ],
    "mark": {
      "type": "bar",
      "fill": "#7da11a",
      "stroke": "black",
      "cursor": "pointer"
    },
    
    "encoding": {
      "x": {"field": "Disease", "type": "nominal"},
      "y": {"field": "Percentage ", "type": "quantitative"},
      "tooltip": [
        {"field": "Disease", "type": "nominal"},
        {"field": "Percentage ", "type": "quantitative"}
      ],
      "fillOpacity": {
        "condition": {"param": "hover", "value": 1},
        "value": 0.3
      },
      "strokeWidth": {
        "condition": [
          {
            "param": "hover",
            "empty": false,
            "value": 2
          },
          {
            "param": "expand",
            "empty": false,
            "value": 1
          }
        ],
        "value": 0
      }
    }
  }
  