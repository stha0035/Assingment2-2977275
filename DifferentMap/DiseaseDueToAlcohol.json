{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Diseases That Drinking Leads To",
  "data": {
    "url":"https://raw.githubusercontent.com/stha0035/Assingment2-2977275/main/DiseaseDueToAlcohol.csv"
  },
  "layer":[{
  "params": [
    {
      "name": "expand",
      "select": {"type": "point", "on": "mouseover"}
    },
    {"name": "hover", "select": "point"}
  ],
  "mark": {
    "type": "bar",
    "stroke": "black",
    "cursor": "pointer",
    "strokeWidth": 20
  },
  
  "encoding": {
    "y": {"field": "Disease", "type": "nominal", "sort": "-x"},
    "x": {"field": "Percentage", "type": "quantitative"},
    "color": {
            "field": "Percentage", 
            "type": "quantitative", 
            "scale": {"scheme": "blues"}
        },
    "tooltip": [
      {"field": "Disease", "type": "nominal"},
      {"field": "Percentage", "type": "quantitative"}
    ],
    "fillOpacity": {
      "condition": {"param": "hover", "value": 1},
      "value": 0.3
    },
    "strokeWidth": {
      "condition": [
        {
          "param": "hover",
          "empty": false,
          "value": 2
        },
        {
          "param": "expand",
          "empty": false,
          "value": 1
        }
      ],
      "value": 0
        } 
      }
    },
    {
      "data": {
    "url":"https://raw.githubusercontent.com/stha0035/Assingment2-2977275/main/DiseaseDueToAlcohol.csv"
  },
  "encoding": {
    "y": {"field": "Disease", "type": "nominal", "sort": "-x"},
    "x": {"field": "Percentage", "type": "quantitative"}
      },
      "layer":[
        {
    "mark": {
      "type": "text",
      "fontSize":10,
      "dy": -1,
      "dx": 10,
      "fontStyle": "italic",
      "fontWeight": "bold"
    },
    "encoding": {
      "text": {"field": "Percentage", "type": "quantitative"}
    }
    }
      ]
    },
     {
      "data": {
    "url":"https://raw.githubusercontent.com/stha0035/Assingment2-2977275/main/DiseaseDueToAlcohol.csv"
  },
  "transform": [
      {"calculate":"parseInt(datum.Percentage)", "as": "Percentage"}
    ],
  "encoding": {
    "y": {"field": "Disease", "type": "nominal"},
    "x": {"field": "Percentage", "type": "quantitative"}
      },
      "layer":[
       {"mark": "bar",
    "encoding": {
        "x": {"field": "Percentage", "type": "quantitative", "title": ""},
        "y": {"field": "Disease", "type": "nominal", "title": "", "sort": "-x"},
        "color": {
            "field": "Percentage", 
            "type": "quantitative", 
            "scale": {"scheme": "blue"}
        }
          }
       }
      ]
    }
  ]
}
